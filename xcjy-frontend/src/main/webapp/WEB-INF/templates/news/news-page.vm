#set($cssFiles = ["css/intro.css"])

 <div class="top"></div>
     <input type="hidden" id="newsTypeId" name="newsTypeId" value="$!{newsTypeId}"/>
     
     <div class="topt"></div>
     
     <div class="head">
          <div class="box">
               <div class="logo"><a href="http://www.xjks.org"><img src="$!{rc.contextPath}/images/logo.png" width="740" height="90" /></a><div>
          </div>
     </div>
     
     
     <div class="banner">
          <div style="width:100%; height:360px; background:url($!{rc.contextPath}/images/banner.png) center center no-repeat;"></div>
     </div>
     
     <div class="line"></div>
     
     <div class="contant wrap">
     
        <div class="left">
             <div class="daohang">
                  <img src="$!{rc.contextPath}/images/intro01.png" width="244" height="53" />
                  <ul>
                      <li><span><img src="$!{rc.contextPath}/images/intro02.png" width="20" height="14" /></span><a href="$!{rc.contextPath}/news/goNewsCenterPage">中心新闻</a></li>
                      <li><span><img src="$!{rc.contextPath}/images/intro02.png" width="20" height="14" /></span><a href="$!{rc.contextPath}/news/goCenterNewsPage" >中心简介</a></li>
                      <li><span><img src="$!{rc.contextPath}/images/intro02.png" width="20" height="14" /></span><a href="$!{rc.contextPath}/news/goNoticeNewsPage">最新公告</a></li>
                      <li><span><img src="$!{rc.contextPath}/images/intro02.png" width="20" height="14" /></span><a href="$!{rc.contextPath}/news/goPartyNewsPage" >中心工作信息</a></li>
                  </ul>
             </div>
        </div>
        
         <div class="right">
             <div class="right-top"><span></span>
				#if($newsTypeId==2)
					中心新闻
				#elseif($newsTypeId==3)
					最新公告
				#end
			 </div>
             <ul>
                  #set($newsList=$pm.data)
				  #foreach($em in $newsList)
					<li><a target="_blank" href="$!{rc.contextPath}/news/findNewsDetails?id=$!{em.id}">• 
						#set($str=$!{em.newsTitle})
							#if($str.length()>50)
                            #set($str=$str.substring(0,50))
                            $str ...
                        #else
                            $!{em.newsTitle}
						#end<span>$!date.format('yyyy-MM-dd ',$!em.createTime)</span></a></li>
                   #end 
				   
				   <div class="page">
						#if(${pm.recordsTotal}>0)
                		#set($pageNums=${pm.recordsTotal}%${pm.pageSize})
                    		#if($pageNums>0)
                    			#set($pageNum=(${pm.recordsTotal}/${pm.pageSize})+1)
                    		#else
                    			#set($pageNum=${pm.recordsTotal}/${pm.pageSize})
                    		#end
    						#foreach($pn in [1..$pageNum])
                    			#set($startNum=${pm.pageSize}*(${pn} - 1))
                        			#if($newsTypeId==2)
                    					<a class="now" href="$!{rc.contextPath}/news/goNewsCenterPage?length=${pm.length}&start=${startNum}">$pn</a>
                    				#elseif($newsTypeId==3)
                    					<a class="now" href="$!{rc.contextPath}/news/goNoticeNewsPage?length=${pm.length}&start=${startNum}">$pn</a>
                    				#end
                    		#end
                		#else
							无数据
						#end
                    </div> 
             </ul>
			  
        </div>

       
     </div>
     
     
