<script src="$!{rc.contextPath}/js/templates/authority/role-merge.js"></script>
<div class="modal fade" id="role-merge-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                        aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">编辑角色信息</h4>
            </div>
            <div class="modal-body">
				<form id="role-merge-form">
					<input name="id" type="hidden" value="$!{role.id}">
                    <div class="form-group">
						<label class="col-lg-3 control-label" for="name">角色名称</label>
						 <div class="col-lg-8">
								<input type="text" class="form-control" id="name" name="name" placeholder="" value="$!{role.name}">
						 </div>
                    </div>
					
                    <div class="form-group">
						<label class="col-lg-3 control-label" for="name">备注</label>
						<div class="col-lg-8">
							<textarea class="form-control" rows="3"  name="remark" id="remark" placeholder="" >$!{role.remark}</textarea>
						</div>
                    </div>
				</form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-primary" id="role-save" >保存</button>
            </div>
        </div>
    </div>
</div>